{
    "name": "Github User Repo Language Bar",
    "version": "1.0",
    "description": "A Chrome plugin that displays a bar graphic for their repo languages",
    "permissions": [
        "activeTab"
      ],
      "content_scripts": [
        {
          "matches": ["https://github.com/*"],
          "js": ["colors.js"]
        },
        {
          "matches": ["https://github.com/*"],
          "js": ["extension-script.js"]
        }
      ],
      "browser_action": {
        "default_title": "Github User Repo Language Bar"
      },
    "manifest_version": 2
  }